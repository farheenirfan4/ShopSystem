{
  "host": "feathers-backend.vercel.app",
  "port": "PORT",
  "public": "../public/",
  "authentication": {
    "entity": "user",
    "service": "users",
    "secret": "YOUR_SECRET_KEY",
    "authStrategies": [
      "jwt",
      "local"
    ],
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    },
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://your-domain.vercel.app",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    }
  },
  "postgresql": {
    "client": "pg",
    "connection": "postgres://username:password@host:port/database"
  }
}